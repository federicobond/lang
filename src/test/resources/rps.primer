let choices = ["rock", "scissor", "paper"]
 
var win = 0
var lose = 0
 
loop {
    index = nil
    do {
        print("Your turn: ")
        pick = index(choices, readln())
    } while (index == null)
 
    other = random(3)
    print("Computer picks ")
    print(get(choices, other))
    println(".")
 
    if (pick - other) % 3 == 2 {
        win = win + 1
        println("You win!)
    }
    if (pick - other) % 3 == 1 {
        lose = lose + 1
        println("Computer wins!")
    }
    if pick == other {
        println("Tie!")
    }
 
    if (win == 3 || lose == 3) {
        break
    }
}
