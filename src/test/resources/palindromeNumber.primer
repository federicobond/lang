
var reverse = 0


   println("Enter a number to check if it is a palindrome or not")
   var n = toInt(readln())

   var temp = n;

   while( temp != 0 )
   {
      reverse = reverse * 10
      reverse = reverse + temp%10
      temp = temp/10
   }

   if ( n == reverse )
      println("You entered a palindrome number")
   else
